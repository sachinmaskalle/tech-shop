    "url": "https://github.com/sachinmaskalle/tech-shop/issues"
  },
  "homepage": "https://github.com/sachinmaskalle/tech-shop#readme",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "mongoose": "^7.5.3"
  }
}
